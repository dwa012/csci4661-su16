<p id="notice"><%= notice %></p>

<% if flash.any? %>
    <div id="error_explanation">
      <ul>
        <% flash.each do |key, message| %>
            <li><%= key %>: <%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to('Show', post) if can? :read, post  %></td>
        <td><%= link_to('Edit', edit_post_path(post)) if can? :update, post %></td>
        <td><%= link_to('Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }) if can? :delete, post   %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
